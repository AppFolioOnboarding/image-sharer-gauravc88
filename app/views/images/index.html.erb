<h2>Stored Images</h2>
<%= form_tag images_path, method: :get do %>
  <%= text_field_tag :tag, params[:tag], id: 'tag-search-field' %>
  <%= submit_tag 'Search', name: nil, id: 'tag-search-submit-button' %>
<% end %>

<% if @images.count > 0 %>
  <div class="card-columns">
    <% @images.each do |image| %>
      <div class="card">
        <%= link_to (image_tag image.url, class: 'card-img'), image %>
        <div class="card-text">
          <% image.tag_list.each do |tag| %>
            <a href=<%= images_path + '?tag=' + tag %>><%= tag %></a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No Images found</p>
<% end %>
<%= link_to 'New Image', new_image_path %>
