<p>
  <h3>Image URL:</h3>
  <%= image_tag @image.url, class: 'js-image-tag'%>
  <p id="image-tags"><%= @image.tag_list.select{|item| item != 'default-image-sharer-tag'}.join(', ') %></p>
</p>

<%= link_to 'Delete', image_path(@image.id), class: 'js-delete-image-link', method: :delete,  data: {confirm: 'Are you sure you want to delete the image?'} %>
<br>
<%= link_to 'Edit Image', edit_image_path, class: 'js-edit-image-link' %>
<br>
<%= link_to 'Share Image', share_image_path(@image.id), class: 'js-share-image-link' %>
<br>
<%= link_to 'All Images', images_path %>
<br>
<%= link_to 'New Image', new_image_path %>
<br>

