<%= simple_form_for(image, method: (action_type == 'edit' ? :patch : :post)) do |form| %>
  <%= form.input :url, label: 'Image url', readonly: action_type == 'edit' %>
  <%= form.input :tag_list, label: 'Tags', placeholder: '(Optional)', input_html: { value: "#{image.tag_list}" } %>
  <%= form.submit 'Save Image', class: "btn btn-primary" %>
<% end %>
